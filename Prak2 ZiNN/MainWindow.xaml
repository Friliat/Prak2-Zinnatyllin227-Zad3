<Window x:Class="Prak2_ZiNN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prak2_ZiNN"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,0,82,85">Ввести число:</TextBlock>
        <TextBox  x:Name="TexA" Margin="30"></TextBox>
        <TextBlock Grid.Row="1" Margin="0,0,82,85">Решение:</TextBlock>
        <TextBlock Grid.Row="1" Margin="0,119,20,9">Задание 3</TextBlock>
        <TextBox  Grid.Row="1" x:Name="TexRE" Margin="30"></TextBox>
        <Button   Grid.Row="2"
                Content="Рассчитать" Click="Button_Click"></Button>
        <Grid ShowGridLines="True"></Grid>
    </Grid>
</Window>
